prefix          = @prefix@
exec_prefix     = @exec_prefix@
bindir          = @bindir@
srcdir          = @srcdir@
builddir        = @builddir@
OCAMLC          = @OCAMLC@
OCAMLOPT        = @OCAMLOPT@
OCAMLLEX        = @OCAMLLEX@
OCAMLYACC       = @OCAMLYACC@
OCAMLDEP        = @OCAMLDEP@
OCAMLJAVA       = @OCAMLJAVA@
CUSTOM	        = -custom
INSTALL         = @INSTALL@
INSTALL_DATA    = @INSTALL_DATA@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_SCRIPT  = @INSTALL_SCRIPT@
JAVA        	= @JAVA@

# 
# List is in order of dependency!
#
SOURCES = \
	memmodel.ml \
	ast.ml \
	globals.ml \
	defaults.ml \
	symtab.ml \
	domain.ml \
	predef.ml \
	type.ml \
	actions.ml \
	lower.ml \
	vp.ml \
	parser.ml \
	lexer.ml \
	main.ml

TARGETS = emmett
ifneq ($(OCAMLJAVA),)
    TARGETS += emmett.jar
endif

emmett-OBJS     = $(SOURCES:.ml=.cmo)
emmett-jar-OBJS = $(SOURCES:.ml=.cmj)

.PHONY: install install-emmett all

all: $(TARGETS)

emmett: $(emmett-OBJS)
	$(OCAMLC) $(CUSTOM) -o $@ $(emmett-OBJS)

emmett.jar: $(emmett-jar-OBJS)
	$(OCAMLJAVA) -standalone -o $@ $(emmett-jar-OBJS)

%.ml: %.mll
	$(OCAMLLEX) $<

%.ml: %.mly
	$(OCAMLYACC) $<

%.cmi: %.mli
	$(OCAMLC) -c $<

%.cmo: %.ml
	$(OCAMLC) -c $<

%.cmj: %.ml
	$(OCAMLJAVA) -c $<

install: install-emmett 

install-emmett: emmett
	[ ! -d $(bindir) ] && mkdir -p $(bindir) || exit 0
	$(INSTALL_PROGRAM) -m 0755 emmett $(bindir)

.depend: $(SOURCES)
	$(OCAMLDEP) $(SOURCES) $(SOURCES:.ml=.mli) > $@

.depend-java: $(SOURCES)
	$(OCAMLDEP) $(SOURCES) $(SOURCES:.ml=.mli) | \
		grep '\.cmx' | \
		sed 's/\.cmx/\.cmj/g' > $@

clean:
	rm -f lexer.ml parser.ml *.mli *.cmo *.cmi \
			.depend .depend-java *.cmj *.jo \
			emmett emmett.jar

Makefile: Makefile.in ../config.status
	cd .. && ./config.status $@

../config.status: ../configure
	cd .. && ./config.status --recheck

ifneq ($(MAKECMDGOALS),clean)
  -include .depend
  ifneq ($(OCAMLJAVA),)
    -include .depend-java
  endif
endif
